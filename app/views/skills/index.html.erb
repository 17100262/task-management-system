<div class="col-lg-8">
   <h4>Skills</h4>
   <table class='table table-bordered white-bg'>
      <thead>
         <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3"></th>
         </tr>
      </thead>
      <tbody>
         <% @skills.each do |skill| %>
         <tr>
            <td><%= skill.name %></td>
            <td><%= skill.description %></td>
            <td><%= link_to 'Show', skill,class:"btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_skill_path(skill),class:"btn btn-primary" %></td>
            <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-warning" %></td>
         </tr>
         <% end %>
      </tbody>
   </table>
   <br>
   <%= link_to 'New Skill', new_skill_path,class:"btn btn-primary" %>
</div>