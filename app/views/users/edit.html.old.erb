<h2> Edit Profile</h2>
<br>
<%= form_for @user do |f| %>
    <div class="form-group row">
        <%= f.label :first_name, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.text_field :first_name, :class => 'form-control' %><br />
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :last_name, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.text_field :last_name, :class => 'form-control' %><br />
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :username, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.text_field :username, :class => 'form-control' %><br />
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :employee_number, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.number_field :employee_number, :class => 'form-control' %><br />
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :landline_number, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.text_field :landline_number, :class => 'form-control' %><br />
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :mobile_number, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.text_field :mobile_number, :class => 'form-control' %><br />
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :address, :class => "col-2 col-form-label" %> <br />
        <div class="col-10">
            <%= f.text_field :address, :class => 'form-control' %><br />
        </div>
    </div>
    
    
    <!--t.string "address"-->
    <%= f.submit "Update" %>
<% end %>
