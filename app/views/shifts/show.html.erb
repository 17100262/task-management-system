<div class="container">
    <div class="row">
        <div class="loginmodal-container">
            <div class="loginmodal-container-2 pt-3">
            <p>
              <strong>Shift date:</strong>
              <%= @shift.shift_date %>
            </p>
            <p>
              <strong>Manager:</strong>
              <%= @shift.manager.first_name %>
            </p>
            
            <p>
              <strong>Shift time:</strong>
              <%= @shift.shift_time.to_time %>
            </p>
            
            <p>
              <strong>Shift status:</strong>
              <%= @shift.shift_status %>
            </p>
            
            <p>
              <strong>Skills required:</strong>
              <%= @shift.skills_required %>
            </p>
            
            <p>
              <strong>External location:</strong>
              <%= @shift.external_location.name %>
            </p>
            
            <p>
              <strong>Assigned Employees:</strong>
              
              <ul>
                <% @shift.users.each do |user| %>
                  <li>
                    <%= user.first_name %>
                  </li>
                <% end %>
              </ul>
              
            </p>
            
            
            <center><%= link_to 'Edit', edit_shift_path(@shift), class:"btn btn-primary" %>
            <%= link_to 'Back', shifts_path, class:"btn btn-primary" %></center>
             </div>
        </div>
    </div>
</div>    

