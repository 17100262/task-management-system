      <%= form.label :company %>
      <input type="text" class="form-control" placeholder="<%= current_user.company.name %>">
    </div>
  </fieldset>
  <%= form.hidden_field :company_id, value: current_user.company.id  %>

  <div class="actions">
    <%= form.submit class: "login loginmodal-button loginmodal-submit" %>
  </div>
<% end %>
