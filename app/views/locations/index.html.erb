<p id="notice"><%= notice %></p>
<%= render 'layouts/sidebar' %>
<div class="col-lg-8">
<h1>Locations</h1>

<table class="table table-bordered white-bg">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.company.name %></td>
        <td><%= link_to 'Show', location, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', location, class:"btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, class:"btn btn-primary" %>
</div>
</div>