<p id="notice"><%= notice %></p>
<div class="col-lg-8">
<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', department, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_department_path(department), class:"btn btn-primary" %></td>
        <td><%= link_to 'Delete', department, class:"btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path, class:"btn btn-primary" %>
</div>
</div>